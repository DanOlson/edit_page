<%= render "edit_page/shared/error_messages", :object => @page %>
<p>
	<%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content %><br />
  <%= f.text_area :content, :rows => 40, :cols => 80 %>
</p>
<p>
	<%= f.label :relative_url, "Relative URL"%><br />
  <%= f.text_field :relative_url %>
</p>
<%= fields_for :file do |attachment| %>
  <p>
    <%= attachment.label :upload, "Attachment" %><br />
    <%= attachment.file_field :upload %>
  </p>
<% end %>