<%= javascript_tag "cmsInit()" %>
<%= form_for(@page, :url => url_for(:controller => 'edit_page/pages', :action => 'update', :id => @page.id)) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f, :@page => @page } %>
  <%= f.submit %>
<% end %>

<%= link_to "Cancel", url_for(:contoller => 'edit_page/pages', :action => 'show', :id => @page.id) %>&nbsp;&nbsp;<%= button_to "Delete", url_for(:controller => 'edit_page/pages', :action => 'destroy', :id => @page.id), :method => :delete, :confirm => "Are you sure you want to delete this page? This will remove the page from your site." %>