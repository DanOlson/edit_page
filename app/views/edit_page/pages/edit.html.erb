<script type="text/javascript">
  $(function() {
    $('textarea').tinymce({
      mode: 'none',
      theme: 'simple'
    });
  });
</script>

<%= form_for(@page, :url => url_for(:controller => 'edit_page/pages', :action => 'update', :id => @page.id)) do |f| %>
  <p><%= f.label :title, 'Page Title' %><br />
  <%= f.text_field :title %></p>
  <p><%= f.label :content, 'Page Content' %><br />
  <%= f.text_area :content, :rows => 40, :cols => 80 %></p>
  <%= f.submit %>
<% end %>

<p><%= link_to "cancel", url_for(:contoller => 'edit_page/pages', :action => 'show', :id => @page.id) %></p>