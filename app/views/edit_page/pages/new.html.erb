<script type="text/javascript">
  tinyMCE.init({ 
    theme : "advanced", 
    mode : "textareas"
  });
</script>

<%= form_for @page, :url => url_for(:controller => 'edit_page/pages', :action => 'create') do |f| %>
  <p><%= f.label :title, 'Page Title' %><br />
  <%= f.text_field :title %></p>
  <p><%= f.label :content, 'Page Content' %><br />
  <%= f.text_area :content, :rows => 40, :cols => 120 %></p>
  <%= f.submit %>
<% end %>

<p><%= link_to "cancel", url_for(:contoller => 'edit_page/pages', :action => 'index') %></p>