<h1><%= @page.title %></h1><br />

<p><%= @page.content.html_safe %></p><br />

<p>
	<%= link_to "All Pages", url_for(:controller => 'edit_page/pages', :action => 'index') %>
	<%= link_to "Edit This Page", url_for(:controller => 'edit_page/pages', :action => 'edit', :id => @page.id) %>
	<%= button_to "Delete This Page", url_for(:controller => 'edit_page/pages', :action => 'destroy', :id => @page.id), :method => :delete, :confirm => "Are you sure you want to delete this page? This will remove the page from your site." %>
</p>